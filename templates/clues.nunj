{% extends "create.nunj" %}
{% block action %}created{% endblock %}
{% macro showClue(clue) %}
  <tr>
    <th>{{clue.clueNumber}}.</th>
    <td><input class="clue" name="{{ clue.clueNumber }}{{ ClueDirection[clue.direction] }}" /></td>
    <td>(<input class="clueLetters" name="{{ clue.clueNumber }}{{ ClueDirection[clue.direction] }}letters" />)</td>
  </tr>
{% endmacro %}

{% block form %}
  <table id="clues_input">
    <tr><th colspan=3>{{ l10n.across }}</td></tr>
    {% for clue in puzzle.clues %}
      {% if clue.direction == ClueDirection.across %}
        {{ showClue(clue) }}
      {% endif %}
    {% endfor %}
    <tr><th colspan=3>{{ l10n.down }}</td></tr>
    {% for clue in puzzle.clues %}
      {% if clue.direction == ClueDirection.down %}
        {{ showClue(clue) }}
      {% endif %}
    {% endfor %}
    <input type="hidden" name="template" value="{{ template }}" />
  </table>
{% endblock %}
